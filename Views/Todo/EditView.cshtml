@model TodoItem
@{
    ViewData["Title"] = "Edit Task";
}

<div class="edit-container">
    <h1>Edit Task</h1>

    <form asp-action="Edit" asp-controller="Todo" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Description</label>
            <input type="text" asp-for="Description" value="@Model.Description" class="form-control" required />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    .edit-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .form-actions {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background: #007bff;
        color: white;
    }

    .btn-secondary {
        background: #ccc;
        color: black;
        text-decoration: none;
    }
</style>
